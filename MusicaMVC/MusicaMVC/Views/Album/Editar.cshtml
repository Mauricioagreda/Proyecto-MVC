@{
}
@model MusicaMVC.Models.Album;
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Editar Album</h2>
        <form asp-controller="Album" asp-action="Editar" method="post">
            <input asp-for="IdAlbum" type="hidden" />
            <div class="mb-3">
                <label>Nombre</label>
                <input  class="form form-control" asp-for="Nombre" type="text" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Album" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>
        </form>
    </div>
</div>
