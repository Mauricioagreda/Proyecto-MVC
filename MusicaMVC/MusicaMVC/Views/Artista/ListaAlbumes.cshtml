@{
}
@model List<MusicaMVC.Models.Album>

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <div class="text-center">
            <h2>Albums de @Model.FirstOrDefault()?.ArtistaReferencia?.Nombre</h2>
        </div>
        <p></p>
        <p></p>
        <p></p>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdAlbum</td>
                        <td>@item.Nombre</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>