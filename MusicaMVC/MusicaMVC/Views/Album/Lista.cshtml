@{
}
@model List<MusicaMVC.Models.Album>;
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Lista Albumes</h2>
        <a asp-controller="Album" asp-action="Nuevo" class="btn btn-success mb-3">Nuevo</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Artista</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdAlbum</td>
                        <td>@item.Nombre</td>
                        <td>
                            <a 
                                class="btn btn-warning" 
                                asp-controller="Artista" 
                                asp-action="ListaAlbumes" 
                                asp-route-id="@item.IdArtista">
                                @item.ArtistaReferencia.Nombre
                            </a>
                        </td>
                        
                        <td>
                            <a 
                                asp-controller="Album"
                                asp-action="Editar"
                                asp-route-id="@item.IdAlbum"
                                class="btn btn-primary">
                                Editar
                            </a>
                            <a
                                asp-controller="Album"
                                asp-action="Eliminar"
                                asp-route-id="@item.IdAlbum"
                                onclick="return confirmar()"
                                class="btn btn-danger">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script>
        function confirmar() 
        { 
            return confirm("Desea eliminar el Album ?")
        }
    </script>
}